<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootLogin" prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <top>
        <VBox prefHeight="317.0" prefWidth="700.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#handleCloseButton" text="Close" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox alignment="BOTTOM_CENTER" maxHeight="-Infinity" prefHeight="200.0" prefWidth="700.0">
                    <children>
                        <Label text="TicTacToe Client">
                            <font>
                                <Font size="40.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
            <HBox alignment="BOTTOM_CENTER">
               <children>
                  <Label text="IP Address: ">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <TextField fx:id="clientIP" maxWidth="-Infinity" prefHeight="27.0" prefWidth="117.0" />
               </children>
            </HBox>
                <HBox alignment="BOTTOM_CENTER">
                    <children>
                        <Label text="Port Number: ">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Label>
                        <TextField fx:id="clientPortNumber" maxWidth="-Infinity" prefHeight="27.0" prefWidth="96.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleConnectButton" prefHeight="40.0" prefWidth="109.0" text="Connect">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="errorMessage" textFill="RED">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
